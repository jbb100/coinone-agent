# KAIROS-1 Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# Coinone API Configuration
# =============================================================================
COINONE_API_KEY=your_api_key_here
COINONE_SECRET_KEY=your_secret_key_here
COINONE_SANDBOX=false

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=sqlite:///./data/kairos1.db
DATABASE_PASSWORD=

# =============================================================================
# Security Configuration
# =============================================================================
ENCRYPTION_KEY_FILE=./config/.encryption_key
ENCRYPTION_ENABLED=true

# =============================================================================
# Notification Configuration
# =============================================================================
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=
SLACK_CHANNEL=#trading-alerts

EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM=
EMAIL_TO=

# =============================================================================
# Development Configuration
# =============================================================================
DEBUG=false
LOG_LEVEL=INFO
PAPER_TRADING=false

# =============================================================================
# Performance and Limits
# =============================================================================
API_RATE_LIMIT_PER_MINUTE=100
MAX_ORDER_RETRY=3
TWAP_DEFAULT_HOURS=4

# =============================================================================
# Risk Management
# =============================================================================
MAX_DAILY_LOSS_THRESHOLD=0.05
MAX_POSITION_SIZE=0.25
MIN_KRW_RATIO=0.01